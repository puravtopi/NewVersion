 <script>
    function SaveChangeStatus() {
    var url = '@Url.Action("ChangeStatus","Appointment")';
    
    var model = {
        "appointment_id": document.getElementById("appointment_id").value,
        "status_id": document.getElementById("status_id").value
    }
    //debugger
    //console.log(model);
    $.ajax({
        type: "Post",
        url: url,
        data: model,
        contentType: "application/x-www-form-urlencoded",
        success: function (data, status, xhr) {
              parent.closemodal()
        },
        error: function (xhr, status, error) {
            alert("Error!" + xhr.status);
        },
    });
}
</script>

<main id="main" style="width:100%" >
     <form method="post">
        <div>
            <br />
                Status :
                <br />
                <br />
                <input name="appointment_id" id="appointment_id" type="hidden" value="@ViewBag.appointmentId" />
                <select name="status_id" id="status_id" class="form-control"  asp-items="@ViewBag.statusList"></select>
               <br />
               <br />

               <input type="button" class="btn btn-success" style="float:right" runat="server" value="Change" onclick="SaveChangeStatus()"/>

            </div>            

       

      </form>

    </main>



