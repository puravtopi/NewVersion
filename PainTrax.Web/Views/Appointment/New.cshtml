    function btnAppointments(type) {
        var url =''
        if (type=="Set")
          url='@Url.Action("SaveAppointments","Appointment")';      
        else if (type=="Update") 
          url='@Url.Action("UpdateAppointments","Appointment")';
        else if (type=="Delete") 
