@{
    ViewData["Title"] = "Company Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model PainTrax.Web.Models.tbl_company

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Manage Location</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Company">Home</a></li>
                <li class="breadcrumb-item active">Create</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">

                        @*<h5 class="card-title">Add Designation</h5>*@
                        <div class="row">
                            <div class="col-sm-12 col-md-6">
                                <h5 class="card-title">Add Company</h5>
                            </div>
                            <div class="col-sm-12 col-md-6" style="text-align:right;padding-top:5px;">

                               

                            </div>
                        </div>

                        <!-- General Form Elements -->
                        <form asp-action="Create" asp-controller="Company">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">Name </label>
                                        <div class="col-md-8 col-lg-9">
                                            <input type="text" class="form-control" tabindex="1" asp-for="name">
                                            <span asp-validation-for="name" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">Address</label>
                                        <div class="col-md-8 col-lg-9">
                                            <textarea class="form-control" tabindex="3" asp-for="address"></textarea>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">User Name</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input type="text" class="form-control" asp-for="username" tabindex="6">
                                            <span asp-validation-for="username" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">Client Code</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input type="text" class="form-control" asp-for="client_code" tabindex="6">
                                            <span asp-validation-for="client_code" class="text-danger"></span>
                                        </div>
                                    </div>
                                   
                                   

                                    <div class="row mb-3">

                                        <div class="col-sm-10">
                                            <button type="submit" class="btn btn-primary">Save</button>
                                            <a class="btn btn-primary" asp-action="Index" asp-controller="Company">Back</a>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">Email</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input type="text" class="form-control" asp-for="email" tabindex="2">
                                            <span asp-validation-for="email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">Phone</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input type="text" class="form-control" asp-for="phone" tabindex="4">
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">Password</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input type="text" class="form-control" asp-for="password" tabindex="6">
                                            <span asp-validation-for="password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <legend class="col-form-label col-sm-3 pt-0"></legend>
                                        <div class="col-sm-9">

                                            <div class="form-check">
                                                <input class="form-check-input" asp-for="is_active" type="checkbox" />
                                                <label class="form-check-label" for="is_active">
                                                    Active
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </section>
</main><!-- End #main -->
@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
