<script>
    $('#borderedTab a').on('click', function (e) {


        var id = $('.tab-content .active').attr('id');
        e.preventDefault();
        var t = this;

        if (id === "bordered-page1") {
            fnPage1Save(t);
        }
        else if (id === "bordered-page2") {
            fnPage2Save(t);
        }
        else if (id === "bordered-ne") {
            fnNESave(t);
        }
        else if (id === "bordered-p4") {
            fnPage3Save(t);
        }
        else if (id === "bordered-other") {
            fnOtherSave(t);
        }
        else if (id === "bordered-poc") {
            $(t).tab('show');

        }
        else if (id === "bordered-ps") {
            $(t).tab('show');
        }

    });


    function requirValidation(id) {
        var result = true;
        var text = $("#" + id).val();
        if (text.length === 0) {
            $("#error-" + id).show();
            result = false;
        }
        else {
            $("#error-" + id).hide();
            result = true;
        }
        return result;
    }

    $("#btnSaveAll").click(function (e) {
        var id = $('.tab-content .active').attr('id');
        e.preventDefault();
        var t = this;

        if (id === "bordered-page1") {
            fnPage1Save(t);
        }
        else if (id === "bordered-page2") {
            fnPage2Save(t);
        }
        else if (id === "bordered-ne") {
            fnNESave(t);
        }
    })
</script>

