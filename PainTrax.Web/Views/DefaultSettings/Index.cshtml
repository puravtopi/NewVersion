                                        @Html.Partial("_Page1", Model.Page1)
                                    </div>
                                    <div class="tab-pane fade" id="bordered-page2" role="tabpanel" aria-labelledby="profile-tab">
                                        @Html.Partial("_Page2", Model.Page2)
                                    </div>
                                    <div class="tab-pane fade" id="bordered-ne" role="tabpanel" aria-labelledby="profile-tab">
                                        @Html.Partial("_NE", Model.NE)
                                    </div>
                                </div><!-- End Bordered Tabs Justified -->
                            </div>
                        </div>
                    </div>
                </div>
