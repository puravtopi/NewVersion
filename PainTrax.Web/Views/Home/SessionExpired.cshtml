   <script>
    // This script checks if the session expired and shows the popup accordingly
    setTimeout(function () {
        showSessionExpiredPopup();
    }, @(Convert.ToInt32(TimeSpan.FromMinutes(1).TotalMilliseconds))); 
    </script>

