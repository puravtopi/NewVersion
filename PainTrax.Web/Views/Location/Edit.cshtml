@model PainTrax.Web.Models.tbl_locations

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Manage Location</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Location">List</a></li>
                <li class="breadcrumb-item active">Edit</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">

                        <div class="row">
                            <div class="col-sm-12 col-md-6">
                                <h5 class="card-title">Edit Location</h5>
                            </div>
                           @*  <div class="col-sm-12 col-md-6" style="text-align:right;padding-top:5px;">

                                <a class="btn btn-primary" asp-action="Index" asp-controller="Location">Cancel</a>

                            </div> *@
                        </div>


                        <!-- General Form Elements -->
                        <form asp-action="Edit" asp-controller="Location" enctype="multipart/form-data">
                            <input type="hidden" asp-for="id" />
                            <input type="hidden" asp-for="createdby" />
                            <input type="hidden" asp-for="createddate" />
                            <input type="hidden" asp-for="cmp_id" />
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">Name of Practice</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input type="text" class="form-control" tabindex="1" asp-for="nameofpractice">
                                            <span asp-validation-for="nameofpractice" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">Address</label>
                                        <div class="col-md-8 col-lg-9">
                                            <textarea class="form-control" tabindex="3" asp-for="address"></textarea>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">Fax</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input type="text" class="form-control" asp-for="fax" tabindex="6">
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">Dr Lastname</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input type="text" class="form-control" asp-for="drlname" tabindex="8">
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <legend class="col-form-label col-sm-3 pt-0"></legend>
                                        <div class="col-sm-9">

                                            <div class="form-check">
                                                <input class="form-check-input" asp-for="isactive" type="checkbox" />
                                                <label class="form-check-label" for="isactive">
                                                    Active
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-5 col-form-label">Header Template</label>
                                        <div class="col-md-8 col-lg-7">
                                            <input type="file" class="form-control" asp-for="header_template" accept=".docx,.doc">
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-5 col-form-label"></label>
                                        <div class="col-md-8 col-lg-7">
                                            @if (!string.IsNullOrEmpty(Model.header_template))
                                            {
                                                <a href="@Url.Content("~/Uploads/HeaderTemplate/" + Model.header_template)" target="_blank">@Model.header_template</a>
                                            }
                                            else
                                            {
                                                <span>No file uploaded</span>
                                            }
                                            <input type="hidden" id="header_template_hidden" name="header_template_hidden" value="@Model.header_template" />
                                        </div>
                                    </div>
                                    <div class="row mb-3">

                                        <div class="col-sm-10">
                                            <button type="submit" class="btn btn-primary">Save</button>
                                            <a class="btn btn-primary" asp-action="Index" asp-controller="Location">Back</a>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">Location</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input type="text" class="form-control" asp-for="location" tabindex="2">
                                            <span asp-validation-for="location" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">Phone</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input type="text" class="form-control" asp-for="telephone" tabindex="4">
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">Email</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input type="text" class="form-control" asp-for="emailid" tabindex="5">
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">Dr Firstname</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input type="text" class="form-control" asp-for="drfname" tabindex="7">
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">Contact Person</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input type="text" class="form-control" asp-for="contactpersonname" tabindex="9">
                                        </div>
                                    </div>



                                </div>

                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->
@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}