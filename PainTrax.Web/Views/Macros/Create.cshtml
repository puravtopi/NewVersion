@model PainTrax.Web.Models.tbl_macros_master

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Manage Macros</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Macros">Home</a></li>
                <li class="breadcrumb-item active">Create</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">

                        @*<h5 class="card-title">Add Designation</h5>*@
                        <div class="row">
                            <div class="col-sm-12 col-md-6">
                                <h5 class="card-title">Add Macros</h5>
                            </div>
                            <div class="col-sm-12 col-md-6" style="text-align:right;padding-top:5px;">

                                <a class="btn btn-primary" asp-action="Index" asp-controller="Macros">Cancel</a>

                            </div>
                        </div>

                        <!-- General Form Elements -->
                        <form asp-action="Create" asp-controller="Macros">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">Body Part</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input type="text" class="form-control" asp-for="bodypart" data-val-required="The Body Part required.">
                                            <span asp-validation-for="bodypart" class="text-danger"></span>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-12">
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">Heading</label>
                                        <div class="col-md-8 col-lg-9">
                                            <textarea class="form-control" asp-for="heading"></textarea>

                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-12">
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">CC Description</label>
                                        <div class="col-md-8 col-lg-9">
                                            <textarea class="form-control" asp-for="cc_desc"></textarea>

                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-12">
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">PE Description</label>
                                        <div class="col-md-8 col-lg-9">
                                            <textarea class="form-control" asp-for="pe_desc"></textarea>

                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-12">
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">ROM Description</label>
                                        <div class="col-md-8 col-lg-9">
                                            <textarea class="form-control" asp-for="rom_desc"></textarea>

                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-12">
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">Assesment/Diagnoses</label>
                                        <div class="col-md-8 col-lg-9">
                                            <textarea class="form-control" asp-for="a_desc"></textarea>

                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-12">
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">P Description</label>
                                        <div class="col-md-8 col-lg-9">
                                            <textarea class="form-control" asp-for="p_desc"></textarea>

                                        </div>
                                    </div>

                                </div>
                                <div class="row mb-3">

                                    <div class="col-sm-10">
                                        <button type="submit" class="btn btn-primary">Save</button>
                                         <a class="btn btn-primary" asp-action="Index" asp-controller="Macros">Back</a>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>

            </div>
        </div>
    </section>
</main><!-- End #main -->
@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
