            var gridUrl = '@Url.Action("Edit", "POCConfig")';
            var exportUrl = '@Url.Action("ExportEdit", "POCConfig")';

            var staticData = [
                { id: 1, type: "Grid Columns" },
                { id: 2, type: "Export Columns" }
            ];

            $("#tbl").DataTable({
                "data": staticData,
                "columns": [
                    { data: "type", autoWidth: true },
                    {
                        data: null,
                        render: function (data, type, row) {
                            var url = '';

                            if (row.type === "Grid Columns") {
                                url = gridUrl;
                            }
                            else if (row.type === "Export Columns") {
                                url = exportUrl;
                            }

                            return '<a href="' + url + '"><i class="ri-edit-line" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Edit"></i></a>';
                        }
                    }
                ]
            });
