                <p id="a_error" style="color:red"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnSaveComment" onclick="fnUpdateSC()">Save</button>
            </div>
        </div><!-- End Large Modal-->
    </div>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<script>

    var isShow = '@ViewBag.ShowTransfer';

    if (isShow == 'True') {
        fnScheduled();
    }
    function fnScheduledPopup(Id) {

        $("#pid").val(Id);
        $("#scheduleModel").modal('show');

    }

    function fnSMulticheduledPopup(Id) {

        $("#multischeduleModel").modal('show');

    }

    function fnclosePP() {
        $("#pid").val('');
        $("#txtRescheduleDate").val('');
        $("#txtRescheduleDateM").val('');
    }

    function fnScheduled() {

        if ($("#_scheduled").prop("checked")) {
            $("#btnTransfer").show();
            $("#btnRescheduled").show();
            $("#btnSave").show();
            $("#btnSC").show();
        } else {
            $("#btnTransfer").hide();
            $("#btnRescheduled").hide();
            $("#btnSave").hide();
            $("#btnSC").hide();
        }
    }

    function fnTransToExecute() {

        var arrayIds = '', arrayDates = '';

        $('table tr').each(function (i) {
            // Only check rows that contain a checkbox
            var $chkbox = $(this).find('input[type="checkbox"]');

            if ($chkbox.length) {
                var status = $chkbox.prop('checked');
                if (status) {

                    var label = $(this).find('#lblsche');
                    var id = $(this).find('#hid')

                    arrayIds = arrayIds + ',' + id.val();
                    arrayDates = arrayDates + ',' + label.text();

                }
            }
        });


        var url = '@Url.Action("TransferToExecute", "Report")?ids=' + arrayIds + '&dates=' + arrayDates;

        $.ajax({
            type: "POST",
            url: url,

            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function () {

                location.reload();
            },
            failure: function (response) {
                alert("Invalid Details...")
            }
        });
    }

    function fnUpdateSC() {
        var sProcedureDetailIDs = $('#ProcedureDetailIDs').val();
        var sId = $('#ddlSC').val();
        var sSCName = $('#txtSurgonName').val();
        var sAssistant = $('#txtAssistant').val();

        var isValid = true;

        // if (sSCName == '' || sSCName == null) {
        //     isValid = false;
        //     $("#sn_error").text("Please Enter Surgon Name");
        // }
        // else {
        //     $("#sn_error").text("");
        // }
        // if (sAssistant == '' || sAssistant == null) {
        //     $("#a_error").text("Please Enter Assistant Name");
        //     isValid = false;
        // } else {
        //     $("#a_error").text("");
        // }

        if (!isValid)
            return;
        var url = '@Url.Action("UpdateSurgoryCenter", "Home")?sProcedureDetailIDs=' + sProcedureDetailIDs + '&sId=' + sId + '&sSCName=' + sSCName + '&sAssistant=' + sAssistant;

        $.ajax({
            type: "Post",
            url: url,
            contentType: "application/x-www-form-urlencoded",
            success: function (data, status, xhr) {
                if (data) {
                    $('#txtSurgonName').val('');
                    $('#txtAssistant').val('');
                    $('#ddlSC').prop('selectedIndex', 0);
                    $('#SCModal').modal('hide');
                    $('#btnSearch').click();
                }
            },
            error: function (xhr, status, error) {
                alert("Error!" + xhr.status);
            },
        });
    }

    function fnSC() {

        var arrayIds = '';

        $('table tr').each(function (i) {
            // Only check rows that contain a checkbox
            var $chkbox = $(this).find('input[type="checkbox"]').not('#chkAll');

            if ($chkbox.length) {
                var status = $chkbox.prop('checked');
                if (status) {
                    var id = $(this).find('#hid')
                    arrayIds = arrayIds + ',' + id.val();
                }
            }
        });
        if (arrayIds == undefined || arrayIds == '' || arrayIds == null) {
            alert("Please Select Patient.")
        }
        else {
            $('#ProcedureDetailIDs').val(arrayIds);
            $('#SCModal').modal('show');
        }



    }

    function fnTransToRescheduled() {


        var sDate = $("#txtRescheduleDateM").val();

        var arrayIds = '';

        $('table tr').each(function (i) {
            // Only check rows that contain a checkbox
            var $chkbox = $(this).find('input[type="checkbox"]');

            if ($chkbox.length) {
                var status = $chkbox.prop('checked');
                if (status) {
                    var id = $(this).find('#hid')
                    arrayIds = arrayIds + ',' + id.val();
                }
            }
        });
        if (sDate == undefined || sDate == '' || sDate == null) {
            alert("Please Select Date.")
        }
        else {

            var url = '@Url.Action("TransferToResheduled", "Report")?ids=' + arrayIds + "&sDate=" + sDate;;

            $.ajax({
                type: "POST",
                url: url,

                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function () {

                    location.reload();
                },
                failure: function (response) {
                    alert("Invalid Details...")
                }
            });
        }
    }

    function fnTransToRescheduledSingle() {

        var id = $("#pid").val();
        var sDate = $("#txtRescheduleDate").val();
        var url = '@Url.Action("TransferToResheduled", "Report")?ids=' + id + "&sDate=" + sDate;

        if (sDate == undefined || sDate == '' || sDate == null) {
            alert("Please Select Date.")
        }
        else {
            $.ajax({
                type: "POST",
                url: url,

                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function () {
                    location.reload();
                },
                failure: function (response) {
                    alert("Invalid Details...")
                }
            });
        }
    }

    function fnUpdatePOCReport() {
        debugger;

        var arrayIds = '';
        var arraySide = '';
        var arrayLevel = '';
        $('#tbl tbody tr').each(function () {
            var $chkbox = $(this).find('input[type="checkbox"].chkTrans');

            if ($chkbox.length && $chkbox.prop('checked')) {
                var status = $chkbox.prop('checked');
                if (status) {
                    var id = $(this).find('#hid')
                    arrayIds = arrayIds + ',' + id.val();

                    // 🔹 get from textbox instead of hidden
                    var side = $(this).find('.sides-input');
                    arraySide += ',' + (side.length ? side.val() : '');

                    var level = $(this).find('.level-input');
                    arrayLevel += ',' + (level.length ? level.val() : '');
                }
            }
        });


        if (arrayIds === '') {
            arrayIds = $('#hdnId').val();
            arraySide = $(".sides-input[data-id='" + arrayIds + "']").val();
            arrayLevel = $(".level-input[data-id='" + arrayIds + "']").val();
        }
        var url = '@Url.Action("UpdatePOCReport", "Report")?ids=' + arrayIds + "&side=" + arraySide + "&level=" + arrayLevel;;

        $.ajax({
            type: "POST",
            url: url,

            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function () {

                location.reload();
            },
            failure: function (response) {
                alert("Invalid Details...")
            }
        });
    }
    function fnReset() {
        $('#frmPOC').trigger("reset");
        $("#frmPOC")[0].reset();
        window.location = '@Url.Action("POCReport", "Report")';
    }
    function DownloadPdf(id, fname, lname, mode) {
        modefilter = mode.trim();
        var modedetails = "";
        if (modefilter == "RSAS") { modedetails = "s/p right shoulder arthroscopy"; }
        else if (modefilter == "LSAS") { modedetails = "s/p left shoulder arthroscopy "; }
        else if (modefilter == "RKAS") { modedetails = "s/p right knee arthroscopy"; }
        else if (modefilter == "LKAS") { modedetails = "s/p left knee arthroscopy"; }

        var downloadurl = '@Url.Action("GeneratePdf", "Forms")';
        // ;
        console.log("Forms/PT FORM.pdf");
        downloadurl = downloadurl + '?pdffile=' + "Forms/PT Referral.pdf" + '&id=' + id + '&txt_date=' + formatDate(document.getElementById("fdate").value) + '&txt_surgery=' + "" + '&txt_docName=' + "" + '&txt_MCode_Proc=' + "test mcode " + '&txtProcedureCode=' + "test mcode procedure " + '&txt_diagnosis=' + modedetails;
        fetch(downloadurl)
            .then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! Status: ${response.status}`);
                }
                console.log(response);
                return response.blob();
            })
            .then(blob => {
                // Handle the Excel file data here
                var link = document.createElement('a');
                link.href = window.URL.createObjectURL(blob);
                link.download = lname.trim() + ", " + fname.trim() + "_" + "PT Referral" + "_" + formatDate(document.getElementById("fdate").value) + ".pdf";
                link.click();
            })
            .catch(error => {
                console.error('Error downloading Excel file:', error);
            });

    }
    function formatDate(date) {
        var d = new Date(date);
        d.setTime(d.getTime() + d.getTimezoneOffset() * 60 * 1000);
        var month = '' + (d.getMonth() + 1),
            day = '' + d.getDate(),
            year = d.getFullYear();

        if (month.length < 2)
            month = '0' + month;
        if (day.length < 2)
            day = '0' + day;

        return [month, day, year].join('-');
    }
    function sortTable(columnIndex) {
        var table = document.getElementById("tbl");
        var rows = Array.prototype.slice.call(table.querySelectorAll("tbody > tr"));

        rows.sort(function (rowA, rowB) {
            var cellA = rowA.cells[columnIndex].textContent;
            var cellB = rowB.cells[columnIndex].textContent;

            if (!isNaN(cellA) && !isNaN(cellB)) {
                return cellA - cellB;
            }

            return cellA.localeCompare(cellB);
        });

        rows.forEach(function (row) {
            table.querySelector("tbody").appendChild(row);
        });
    }


    $(document).on('change', '#chkAll', function () {
        $('.chkTrans').prop('checked', this.checked);
    });

</script>
