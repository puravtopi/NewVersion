    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Reschedule Date</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <div class="col-sm-10">
                    <input type="date" id="txtRescheduleDateM" class="form form-control" />
                </div>
                <div class="mt-3">
                    <button type="button" class="btn btn-primary" id="save-signature" onclick="fnTransToRescheduled()">Reschedule</button>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal" aria-label="Close" onclick="fnclosePP()">Close</button>
                </div>

            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="SCModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modeltitle">Surgery Center Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="ProcedureDetailIDs" />
                <select id="ddlSC" class="form-select" asp-items="@ViewBag.surgoryList"></select>
                <p id="p_error" style="color:red"></p>
                <input id="txtSurgonName" class="form-control" placeholder="Surgone Name" />
                <p id="sn_error" style="color:red"></p>
