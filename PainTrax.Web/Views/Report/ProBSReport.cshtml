@model PainTrax.Web.ViewModel.ProBSReportVM

<main id="main" class="main">
    <style>
        #tbl th, #tbl td {
        white-space: nowrap !important;
        }
    </style>
    <div class="pagetitle">
        <h1>Pro BS Report</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="">Home</a></li>
                <li class="breadcrumb-item active">Pro BS Report</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <form asp-action="ProBSReport" asp-controller="Report" id="frmPOC">
                            <br />
                            <div class="row mb-3">
                                <div class="col-md-3 col-lg-3">

                                    <label class="col-md-12 col-lg-12 col-form-label">Date</label>
                                    <div class="col-md-12 col-lg-12">
                                        <input type="date" asp-for="fdate" class="form-control">

                                    </div>
                                </div>


                                <div class="col-md-3 col-lg-3">
                                    <br />
                                    <br />

                                </div>

                            </div>
                            <div class="clearfix"></div>
                            <br />
                            <div class="col-md-12 col-lg-12">
                                <a class="btn btn-info" style="float:right; margin-left:10px;" asp-action="ExportToExcelProBS" asp-controller="Report">Export</a>
                                <button class="btn btn-secondary" type="button" style="float:right; margin-left:10px;" onclick="fnReset()">Reset</button>
                                <button class="btn btn-success" style="float:right; margin-left:10px;" type="submit">Search</button>

                            </div>
                            <div class="clearfix"></div>
                        </form>
                        <br />

                       
                        <div class="table-responsive">
                            <table id="tbl" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Name</th>  
                                        <th>Account_No</th>
                                        <th>Phone</th>                                        
                                        <th>Case</th>
                                        <th>Location</th>
                                        <th>MCODE</th>
                                        <th>Schedule</th>  
                                        <th>SurgeryCentre Name</th>
                                        <th>Booking Status</th>
                                        <th>Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.lstProBSReport.Count > 0)
                                    {
                                        for (int i = 0; i < Model.lstProBSReport.Count; i++)
                                        {

                                            string bookingStatus = Model.lstProBSReport[i].Bookingsheet_sent?.Trim().ToLower();
                                            string rowColor = "";

                                            if (bookingStatus == "yes")
                                            {
                                                rowColor = "green";
                                            }
                                            else if (bookingStatus == "no")
                                            {
                                                rowColor = "red";
                                            }
                                            else if (bookingStatus == "n/a" || bookingStatus == "na")
                                            {
                                                rowColor = "yellow";
                                            }

                                            <tr style="background-color:@rowColor">
                                                @Html.HiddenFor(m => m.lstProBSReport[i].procedureDetail_id) <!-- Needed for DB update -->

                                                <td>@Html.DisplayFor(m => m.lstProBSReport[i].name)</td>
                                                <td>@Html.DisplayFor(m => m.lstProBSReport[i].account_no)</td>
                                                <td>@Html.DisplayFor(m => m.lstProBSReport[i].Phone)</td>
                                                <td>@Html.DisplayFor(m => m.lstProBSReport[i].casetype)</td>
                                                <td>@Html.DisplayFor(m => m.lstProBSReport[i].location)</td>
                                                <td>@Html.DisplayFor(m => m.lstProBSReport[i].mcode)</td>
                                                <td>@(Model.lstProBSReport[i].scheduled?.ToString("MM/dd/yyyy"))</td>
                                                <td>@Html.DisplayFor(m => m.lstProBSReport[i].sx_center_name)</td>
                                                <td>@Html.DisplayFor(m => m.lstProBSReport[i].Bookingsheet_sent)</td> 
                                                <td>@Html.DisplayFor(m => m.lstProBSReport[i].Note)</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

</main>




<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>


<script>

    function fnReset() {
        $('#frmPOC').trigger("reset");
        $("#frmPOC")[0].reset();
        window.location = '@Url.Action("ProBSReport", "Report")';
    }

</script>





