@model PainTrax.Web.ViewModel.ProSXDetailsReportVM


<main id="main" class="main">

    <div class="pagetitle">
        <h1>Pro SX Details Report List</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="">Home</a></li>
                <li class="breadcrumb-item active">Pro SX Details Report</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <form asp-action="ProSXDetailsReport" asp-controller="Report" id="frmPOC">
                            <br />
                            <div class="row mb-3">
                                <div class="col-md-3 col-lg-3">

                                    <label class="col-md-12 col-lg-12 col-form-label">FromDate</label>
                                    <div class="col-md-12 col-lg-12">
                                        <input type="date" asp-for="fdate" class="form-control">

                                    </div>
                                </div>

                                <div class="col-md-3 col-lg-3">
                                    <label class="col-md-12 col-lg-12 col-form-label">ToDate</label>
                                    <div class="col-md-12 col-lg-12">
                                        <input type="date" asp-for="tdate" class="form-control">

                                    </div>
                                </div>
                                <div class="col-md-3 col-lg-3">
                                    <label class="col-md-12 col-lg-12 col-form-label">Location</label>
                                    <div class="col-md-12 col-lg-12">
                                        <select asp-for="locationid" class="form-select" asp-items="@ViewBag.locList"></select>

                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <br />
                            <div class="col-md-12 col-lg-12">



                                <a class="btn btn-info" style="float:right; margin-left:10px;" asp-action="ExportToExcelProSXDetails" asp-controller="Report">Export</a>
                                <button class="btn btn-secondary" type="button" style="float:right; margin-left:10px;" onclick="fnReset()">Reset</button>
                                <button class="btn btn-success" style="float:right; margin-left:10px;" type="submit">Search</button>
                            </div>
                            <div class="clearfix"></div>
                        </form>
                        <br />
                        <div class="table-responsive">
                        <table id="tbl" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">SEX</th>
                                    <th scope="col">NAME</th>
                                    <th scope="col">MC</th>
                                    <th scope="col">CaseType</th>
                                    <th scope="col">location</th>
                                    <th scope="col">Vaccinated</th>
                                    <th scope="col">MCODE</th>
                                    <th scope="col">BodyPart</th>
                                    <th scope="col">Ins_ver_status</th>
                                    <th scope="col">MC_Status</th>
                                    <th scope="col">Case_Status</th>
                                    <th scope="col">InsVerStatus</th>
                                    <th scope="col">Vac_Status</th>
                                    <th scope="col">Scheduled</th>
                                    <th scope="col">Executed</th>
                                    <th scope="col">Requested</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.lstProSXDetailsReport.Count > 0)
                                {
                                    @foreach (var item in Model.lstProSXDetailsReport)
                                    {
                                        <tr>
                                            <td>@item.name</td>
                                            <td>@item.sex</td>
                                            <td>@item.mc</td>
                                            <td>@item.casetype</td>
                                            <td>@item.location</td>
                                            <td>@item.vaccinated</td>
                                            <td>@item.mcode</td>
                                            <td>@item.bodypart</td>
                                            <td>@item.ins_ver_status</td>
                                            <td>@item.mc_status</td>
                                            <td>@item.case_status</td>
                                            <td>@item.insverstatus</td>
                                            <td>@item.vac_status</td>
                                            <td>@item.scheduled</td>
                                            <td>@item.executed</td>
                                            <td>@item.requested</td>
                                           
                                        </tr>

                                    }
                                }
                                else
                                {
                                    <tr><td colspan="12"><p>No data found</p></td></tr>

                                }

                            </tbody>
                        </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

</main>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<script>


    function fnReset() {
        $('#frmPOC').trigger("reset");
        $("#frmPOC")[0].reset();
        window.location = '@Url.Action("ProSXDetailsReport", "Report")';
    }
</script>
