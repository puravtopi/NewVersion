                                    {
                                        for (int i = 0; i < Model.lstProSXReport.Count; i++)
                                        {
                                            <tr style="background-color:@(Model.lstProSXReport[i].color)">
                                                @Html.HiddenFor(m => m.lstProSXReport[i].procedureDetail_id) <!-- Needed for DB update -->

                                                <td>@Html.DisplayFor(m => m.lstProSXReport[i].name)</td>
                                                <td>@Html.DisplayFor(m => m.lstProSXReport[i].mc)</td>
                                                <td>@Html.DisplayFor(m => m.lstProSXReport[i].casetype)</td>
                                                <td>@Html.DisplayFor(m => m.lstProSXReport[i].location)</td>
                                                <td>@Html.DisplayFor(m => m.lstProSXReport[i].mcode)</td>
                                                <td>@(Model.lstProSXReport[i].scheduled?.ToString("MM/dd/yyyy"))</td>

                                                
                                                <td>
                                                    @Html.DropDownListFor(m => m.lstProSXReport[i].sx_center_name,
                                                             (SelectList)ViewBag.surgoryList,
                                                             "Select SurgeryCenter",
                                                             new { @class = "form-control" })
                                                </td>
                                                <td>@Html.TextBoxFor(m => m.lstProSXReport[i].sx_Notes, new { @class = "form-control" })</td>

                                                <td>
                                                    @Html.DropDownListFor(m => m.lstProSXReport[i].sx_Status,
                                                             (SelectList)ViewBag.StatusList,
                                                             "Select Status",
                                                             new { @class = "form-control" })
                                                </td>

                                                <td>
                                                    @Html.DropDownListFor(m => m.lstProSXReport[i].SX_Ins_Ver_Status,
                                                             (SelectList)ViewBag.InsuranceStatusList,
                                                             "Select Status",
                                                             new { @class = "form-control" })
                                                </td>

                                                <td>@Html.TextBoxFor(m => m.lstProSXReport[i].Ver_comment, new { @class = "form-control" })</td>

                                                <td>
                                                    @Html.DropDownListFor(m => m.lstProSXReport[i].Preop_notesent,
