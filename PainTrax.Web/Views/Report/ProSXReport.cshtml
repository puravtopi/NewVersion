<script>
    $(function () {

        if ($.fn.DataTable.isDataTable("#tbl")) {
            $("#tbl").DataTable().clear().destroy();
        }

        $("#tbl").DataTable({
            paging: false,
            searching: false,
            info: false,
            autoWidth: true,
            columnDefs: [
                { targets: [0, 2, 9], orderable: true },  // Name, MC
                { targets: "_all", orderable: false }, // everything else default false

                {
                    targets: 9,   // mc_Status (dropdown)
                        orderable: true,
                    render: function (data, type, row, meta) {
                        if (type === 'sort') {
                            return $(data).find("option:selected").text();
                        }
                        return data;
                    }
                }
            ]
        });

    });
   
</script>
