    const fourDropdown = document.getElementById('diagleftshoulder_comma');
    const fiveDropdown = document.getElementById('diagrightshoulder_comma');
    const sixDropdown = document.getElementById('diagleftknee_comma');
    const sevenDropdown = document.getElementById('diagrightknee_comma');
    const eightDropdown = document.getElementById('diagbrain_comma');
    const nineDropdown = document.getElementById('other1_comma');
    const tenDropdown = document.getElementById('other2_comma');
    const elevenDropdown = document.getElementById('other3_comma');
    const twelveDropdown = document.getElementById('other4_comma');
    const thirteenDropdown = document.getElementById('other5_comma');
    const fouteenDropdown = document.getElementById('other6_comma');
    const fifteenDropdown = document.getElementById('other7_comma');

        // Set the second dropdown value to match the first
        firstDropdown.value = selectedValue;
        secondDropdown.value = selectedValue;
        thidDropdown.value = selectedValue;
        fourDropdown.value = selectedValue;
        fiveDropdown.value = selectedValue;
        sixDropdown.value = selectedValue;
        sevenDropdown.value = selectedValue;
        eightDropdown.value = selectedValue;
        nineDropdown.value = selectedValue;
        tenDropdown.value = selectedValue;
        elevenDropdown.value = selectedValue;
        twelveDropdown.value = selectedValue;
        thirteenDropdown.value = selectedValue;
        fouteenDropdown.value = selectedValue;
        fifteenDropdown.value = selectedValue;
    });
    })


    function autoclosepopup() {
        $('#myModalMessage').data('hideInterval', setTimeout(function () {
            $('#myModalMessage').modal('hide');
        }, 1500));
    }

   

</script>


