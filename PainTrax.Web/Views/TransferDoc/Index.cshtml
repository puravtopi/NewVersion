@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using PainTrax.Web.Helper;
@{
    ViewData["Title"] = "Import Document";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var clientCode = HttpContextAccessor.HttpContext.Session.GetString(SessionKeys.SessionCmpName);
}
<main id="main" class="main">

    <div class="pagetitle">
        <h1>Transfer Document</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">Home</li>
                <li class="breadcrumb-item active">Transfer Document</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">



                <div class="card">
                    <div class="card-body">
                        <br />
                        @if (clientCode.ToLower() == "seldesmd")
                        {
                            <h5>Transfer SeldesMD Document</h5>
                            <!-- Upload File Form -->
                            <form asp-action="TransferSaldesMD" method="post" enctype="multipart/form-data" class="form-inline mb-3">
                                <div class="row">
                                    <button type="submit" class="btn btn-primary" style="width:200px">Transfer</button>
                                </div>
                            </form>
                        }
                        <br />
                        @if (clientCode.ToLower() == "bhfPC")
                        {
                            <h5>Transfer SeldesMD Document</h5>
                            <!-- Upload File Form -->
                            <form asp-action="TransferBHFTest" method="post" enctype="multipart/form-data" class="form-inline mb-3">
                                <div class="row">
                                    <button type="submit" class="btn btn-primary" style="width:200px">Transfer</button>
                                </div>
                            </form>
                        }
                    </div>
                    <div class="row">
                        @if (TempData["Message"] != null)
                        {
                            <div class="@TempData["alert"]">
                                @TempData["Message"]
                            </div>
                        }

                    </div>

                </div>
            </div>
        </div>
    </section>
</main>
