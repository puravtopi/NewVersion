@model MS.Models.tbl_treatment_master

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Manage Treatment Master</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Location">Home</a></li>
                <li class="breadcrumb-item active">Edit</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">

                        @*<h5 class="card-title">Add Designation</h5>*@
                        <div class="row">
                            <div class="col-sm-12 col-md-6">
                                <h5 class="card-title">Edit Entry</h5>
                            </div>
                            <div class="col-sm-12 col-md-6" style="text-align:right;padding-top:5px;">

                                <a class="btn btn-primary" asp-action="Index" asp-controller="Treatment">Cancel</a>

                            </div>
                        </div>

                        <!-- General Form Elements -->
                        <form asp-action="Edit" asp-controller="Treatment">
                            <input type="hidden" asp-for="id" />
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">Details</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input type="text" class="form-control" tabindex="1" asp-for="treatment_details">
                                            <span asp-validation-for="treatment_details" class="text-danger"></span>
                                        </div>
                                    </div>
                                      <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">Pre Select</label>
                                        <div class="col-md-8 col-lg-9">
                                            <select asp-for="pre_select" class="form-control">
                                                <option value="true">Yes</option>
                                                <option value="false">No</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label">Display Order</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input type="number" class="form-control" tabindex="3" asp-for="display_order">
                                            <span asp-validation-for="display_order" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="row mb-3">

                                        <div class="col-sm-10">
                                            <button type="submit" class="btn btn-primary">Save</button>
                                            <a class="btn btn-primary" asp-action="Index" asp-controller="Treatment">Back</a>
                                        </div>
                                    </div>
                                </div>

                              

                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </section>
</main><!-- End #main -->
@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
