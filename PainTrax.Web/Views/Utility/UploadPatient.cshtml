@model PainTrax.Web.ViewModel.UploadSignVM

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Utility</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a>Utility</a></li>

            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">

                        @*<h5 class="card-title">Add Designation</h5>*@
                        <div class="row">
                            <div class="col-sm-12 col-md-6">
                                <h5 class="card-title">Upload Patients IE Data</h5>
                            </div>
                            <div class="col-sm-12 col-md-6" style="text-align:right;padding-top:5px;">
                            </div>
                        </div>

                        <!-- General Form Elements -->
                        <form asp-action="UploadPatient" asp-controller="Utility" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-lg-12">

                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-5 col-form-label">Upload XLS</label>
                                        <div class="col-md-8 col-lg-7">
                                            <input type="file" class="form-control" asp-for="patient" accept=".xls,.XLS,.xlsx,.XLSX">
                                        </div>
                                    </div>


                                    <div class="row mb-3">

                                        <div class="col-sm-10">
                                            <button type="submit" class="btn btn-primary">Upload</button>
                                            <a class="btn btn-primary" asp-action="Index" asp-controller="Location">Back</a>
                                        </div>
                                    </div>
                                </div>



                            </div>
                        </form>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">

                        @*<h5 class="card-title">Add Designation</h5>*@
                        <div class="row">
                            <div class="col-sm-12 col-md-6">
                                <h5 class="card-title">Upload Patients FU Data</h5>
                            </div>
                            <div class="col-sm-12 col-md-6" style="text-align:right;padding-top:5px;">
                            </div>
                        </div>

                        <!-- General Form Elements -->
                        <form asp-action="UploadPatientFU" asp-controller="Utility" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-lg-12">

                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-5 col-form-label">Upload XLS</label>
                                        <div class="col-md-8 col-lg-7">
                                            <input type="file" class="form-control" asp-for="patientFU" accept=".xls,.XLS,.xlsx,.XLSX">
                                        </div>
                                    </div>


                                    <div class="row mb-3">

                                        <div class="col-sm-10">
                                            <button type="submit" class="btn btn-primary">Upload</button>
                                            <a class="btn btn-primary" asp-action="Index" asp-controller="Location">Back</a>
                                        </div>
                                    </div>
                                </div>



                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->
@if (TempData["msg"] != null)
    @Html.Raw(TempData["msg"])


@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
