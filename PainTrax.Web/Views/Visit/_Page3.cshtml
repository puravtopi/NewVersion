<script>

    var ckDisMediction;

    function fnPage3Save(t) {

        bootbox.confirm({

            message: 'Are sure you want to save Details?',
            swapButtonOrder: true,
            callback: function (result) {

                if (result) {
                    var url = '@Url.Action("SavePage3", "Visit")';
                    var ieId = $("#id").val();
                    var patientId = $("#patientid").val();
                    var Id = $("#txtId_P3").val();
                    var model = $("#frmPage3_1,#frmPage3_2").serialize() + "&ieid=" + ieId + "&patientid=" + patientId + "&id=" + Id + "&discharge_medications=" + ckDisMediction.getData();

                    $.ajax({
                        type: "Post",
                        url: url,
                        data: model,
                        contentType: "application/x-www-form-urlencoded",
                        success: function (data, status, xhr) {





                            var daignoCodeDetails = "<ol>";

                            if ($("#diagcervialbulge_text").val() != '') {
                                daignoCodeDetails += "<li>" + $("#diagcervialbulge_text").val() + "</li>";
                            }
                            if ($("#diagcervialbulge_hnp1").val() != '') {
                                daignoCodeDetails += "<li>" + $("#diagcervialbulge_hnp1").val() + "</li>";
                            }
                            if ($("#diagcervialbulge_hnp2").val() != '') {
                                daignoCodeDetails += "<li>" + $("#diagcervialbulge_hnp2").val() + "</li>";
                            }

                            if ($("#diagthoracicbulge_text").val() != '') {
                                daignoCodeDetails += "<li>" + $("#diagthoracicbulge_text").val() + "</li>";
                            }
                            if ($("#diagthoracicbulge_hnp1").val() != '') {
                                daignoCodeDetails += "<li>" + $("#diagthoracicbulge_hnp1").val() + "</li>";
                            }
                            if ($("#diagthoracicbulge_hnp2").val() != '') {
                                daignoCodeDetails += "<li>" + $("#diagthoracicbulge_hnp2").val() + "</li>";
                            }

                            if ($("#diaglumberbulge_text").val() != '') {
                                daignoCodeDetails += "<li>" + $("#diaglumberbulge_text").val() + "</li>";
                            }
                            if ($("#diaglumberbulge_hnp1").val() != '') {
                                daignoCodeDetails += "<li>" + $("#diaglumberbulge_hnp1").val() + "</li>";
                            }
                            if ($("#diaglumberbulge_hnp2").val() != '') {
                                daignoCodeDetails += "<li>" + $("#diaglumberbulge_hnp2").val() + "</li>";
                            }

                            var htmlDaignosis = daignoCodeDetails + "</ol>";
                            ckPOCAssestence.data.set(htmlDaignosis);

                            if (data > 0) {
                                $('#myModalMessage').modal('show');
                                $('#messBody').html('<p>Saved.</p>');
                                autoclosepopup();
                                $("#txtId_P3").val(data);
                                if (t != null)
                                    $(t).tab('show');
                            }
                            else
                                alert("Error in Data Saving.");
                        },
                        error: function (xhr, status, error) {
                            alert("Error!" + xhr.status);
                        },
                    });
                }
                else {
                    $(t).tab('show');
                }
            }
        });
    }

    $(".pdate").change(function () {
        const date1 = new Date(this.value);
        const date2 = new Date($("#dos").val());

        if (date1 > date2) {
            $('#messBody').html('<p>Date need to be less than DOS date <b>' + $("#dos").val() + '</b>.</p>');
            $('#myModalMessage').modal('show');

            $('#' + this.id).val('');
        }
    });

    $(document).ready(function () {
        ClassicEditor.create(document.querySelector('#txtDisMediction'), {

            mention: {
                feeds: [
                    {
                        marker: '~',
                        feed: getFeedItems,
                        itemRenderer: customItemRenderer
                        /*minimumCharacters: 1*/
                    }
                ]
            }
        }).then(editor => {

            window.editor = editor;
            ckDisMediction = editor;
        })
            .catch(handleSampleError);

    })

    function fndefaultDiagnosespage4() {


        var url = '@Url.Action("GetDefultDaignoCodeList", "Visit")?bodyparts=' + $("#txtbodypart").val() + '';

        $.ajax({
            type: "Post",
            url: url,

            contentType: "application/x-www-form-urlencoded",
            success: function (data, status, xhr) {



                var daignoCodeDetails = "<ul>";


                var myContentDaignosis = ckDisMediction.getData();

                data.forEach(function (i) {


                    if (i.isSelect) {
                        if (myContentDaignosis.indexOf(i.diagCode) < 0) {

                            daignoCodeDetails += "<li>" + i.diagCode;
                            daignoCodeDetails += " - " + i.description;
                            daignoCodeDetails += "</li>";
                        }
                    }
                });

                var htmlDaignosis = myContentDaignosis + daignoCodeDetails + "</ul>";
                ckDisMediction.data.set(htmlDaignosis);


            },
            error: function (xhr, status, error) {
                alert("Error!" + xhr.status);
            },
        });


        return false;
    }

</script>

